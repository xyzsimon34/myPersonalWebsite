<%- include('partials/header') %> <!-- Include header and navbar from partials -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Guestbook</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/blog.css">
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400..900&display=swap" rel="stylesheet">
</head>
<body>

<!-- Blog Section -->
<section class="Blog-section py-5">
    <div class="container">
        <h2 class="display-5 fw-bold text-body-emphasis text-center">Guestbook Posts</h2>
        <div class="mt-4">
            <% if (posts.length > 0) { %>
                <% posts.forEach(post => { %>
                    <article class="post-card mb-4">
                        <h3 class="h5 fw-semibold"><%= post.title %></h3>
                        <p class="text-muted small"><%= post.date %></p>
                        <p><%= post.content %></p>
                    </article>
                <% }) %>
            <% } else { %>
                <div class="no-posts-message">
                    No posts available. Be the first to <a href="/guestbook/new">Create one!</a>
                </div>
            <% } %>
        </div>

        <div class="text-center mt-5">
            <a href="/guestbook/new" class="custom-btn btn-warning">Create a New Post</a>
        </div>
    </div>
</section>

<div class="b-example-divider"></div>

</body>
</html>

<%- include('partials/footer') %> <!-- Include footer from partials -->
