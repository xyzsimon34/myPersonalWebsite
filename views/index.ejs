<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Website</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400..900&display=swap" rel="stylesheet">
</head>
<%- include('partials/header') %> <!-- Include the header partial -->

<body cz-shortcut-listen="true">
    <!-- Section-Hero -->
    <section class="Hero-section">
        <div class="container">
            <div class="px-4 py-5 my-5 text-center">
                <img class="d-block mx-auto mb-4 custom-img" src="images/bootstrap-logo.svg" alt="Bootstrap logo">
                <h1 class="display-5 fw-bold text-body-emphasis" id="hero-text"></h1>
                <div class="col-lg-6 mx-auto">
                    <p class="lead mb-4">A passionate junior <span class="web3" id="web3-text">Web3</span> developer!</p>
                </div>
            </div>
            <div class="text-center">
                <img src="/images/Dogecoin-to-the-Moon-icon.png" alt="dogtothemoon" class="custom-img mx-auto">
            </div>
        </div>
    </section>
    <div class="b-example-divider"></div>
    
    <!-- Section-Skills -->
    <div class="container text-center px-5" id="custom-cards">
        <h2 class="pb-2">My Projects</h2>
        <div class="row row-cols-1 row-cols-lg-3 align-items-stretch g-4 py-5">
            <div class="col">
                <div class="card card-cover h-100 overflow-hidden text-bg-dark rounded-4 shadow-lg" 
                     style="background-image: url('images/crypto-background.jpg');">
                    <div class="d-flex flex-column h-100 p-5 pb-3 text-white text-shadow-1">
                        <h3 class="pt-5 mt-5 mb-4 display-6 lh-1 fw-bold">A Project</h3>
                        <ul class="d-flex list-unstyled mt-auto">
                            <button type="button" class="btn btn-warning mb-3 align-self-start">View</button>
                        </ul>
                    </div>
                </div>
            </div>
    
            <div class="col">
                <div class="card card-cover h-100 overflow-hidden text-bg-dark rounded-4 shadow-lg" style="background-image: url('images/unsplash-photo-2.jpg');">
                    <div class="d-flex flex-column h-100 p-5 pb-3 text-white text-shadow-1">
                        <h3 class="pt-5 mt-5 mb-4 display-6 lh-1 fw-bold">B Project</h3>
                        <ul class="d-flex list-unstyled mt-auto">
                            <button type="button" class="btn btn-warning mb-3 align-self-start">View</button>
                        </ul>
                    </div>
                </div>
            </div>
    
            <div class="col">
                <div class="card card-cover h-100 overflow-hidden text-bg-dark rounded-4 shadow-lg" style="background-image: url('images/unsplash-photo-3.jpg');">
                    <div class="d-flex flex-column h-100 p-5 pb-3 text-white text-shadow-1">
                        <h3 class="pt-5 mt-5 mb-4 display-6 lh-1 fw-bold">C Project</h3>
                        <ul class="d-flex list-unstyled mt-auto">
                            <button type="button" class="btn btn-warning mb-3 align-self-start">View</button>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="b-example-divider"></div>
    
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="/js/interaction.js" charset="utf-8"></script>
    </body>
    <%- include('partials/footer') %> <!-- Include the footer partial -->
</html>